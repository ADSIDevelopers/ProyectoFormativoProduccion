<html lang="en">
<head>
    <%- include('../partials/head'); %>
    <link rel="stylesheet" href="css/tabla.listas.css">
    <link rel="stylesheet" href="css/style.input.css">
    <link rel="stylesheet" href="css/form.inventario.css">
    <title>SENA</title>
</head>
<body>
    <div class="content-header">
        <%- include('../partials/header-admin') %> 
    </div>
    <div class="main-contenedor">
        <div class="body-info-section">
            <div class="full-container">
                <div class="breadcrumb">
                    <a href="#" class="go-home">Volver al inicio</a>  | <a href="puntoventa">Inventario</a>
                </div>
                    <h1 class="h-title">Productos disponibles en los puntos de Venta <a id="Openform" class="btn-new icon-library_add"> Nuevo Inventario</a></h1>
                    <div class="table-admin mt-1">
                        <table class="table-info">
                            <thead>
                                <th>Id Inventario</th>
                                <th>Punto de VentaPunto de Venta</th>
                                <th>Producto</th>
                                <th>Stock</th>
                                <th>Admin</th>
                            </thead>
                            <tbody id="tbody_date">
                                   
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="content-form-subject">
                    <div class="content-main-form-subject">
                        <h1 class="h-title">Agregar Productos al Punto de Venta</h1><div class="popup-close-window">x</div>
                        <form class="content_form_inventario">
                            <label class="label_producto">Producto</label>
                            <div class="content_data content_producto design-1">
                                <select id="fkproducto" class="form-control">
                                    <option selected disabled >Seleccionar...</option>
                                    <% for(var i=0; i<Productos.length;i++){%>
                                        <option value="<%=Productos[i].Codigo_pdto%>"><%=Productos[i].Nombre%> </option>
                                        <%  }
                                        %>
                                </select>
                            </div>
                            <label class="label_puntventa">Punto de Venta</label>
                            <div class="content_data content_puntventa design-1">
                                <select id="fkpuntventa" class="form-control">
                                    <option selected disabled >Seleccionar...</option>
                                    <% for(var i=0; i<PVenta.length;i++){%>
                                        <option value="<%=PVenta[i].Id_punto_vent%>"><%=PVenta[i].Nombre%> </option>
                                        <%  }
                                        %>
                                </select>
                            </div>
                            <button type="button" class="boton_registro" onclick="RegistrarInventario();">Registrar</button>
                        </form>
                    </div>
                </div>
                <!-- MODAL -->
                <div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-xl">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="exampleModalLabel">Actualizar Inventario <input type="text"  size="5" id="id_pdto_inventario" disabled></h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form >
                                <div class="row">
                                    <div class="form-floating mb-3 col-4">
                                        <input type="text" class="form-control" id="Productoact">
                                        <label for="floatingInput">Producto</label>
                                    </div>
                                    <div class="form-floating mb-3 col-4">
                                        <input type="text" class="form-control" id="Puntoact">
                                        <label for="floatingInput">Punto de Venta</label>
                                    </div>
                                    <div class="form-floating mb-3 col-4">
                                        <input type="number" class="form-control" id="Stockact">
                                        <label for="floatingInput">Asignar Stock</label>
                                    </div>
                                </div>
                            </form>
                            <button class="btn btn-primary btn-lg" type="button">Actualizar</button>
                            <table id="tablainventario" class="table" style="width:100%;">
                                <thead>
                                    <tr>
                                        <th>Id Produccion</th>
                                        <th>Producto</th>
                                        <th>Cantidad de Produccion</th>
                                        <th>Id Bodega</th>
                                        <th>Cantidad Bodega</th>
                                        <th>Inventario</th>
                                        <th>Fecha Bodega</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                      </div>
                    </div>
                  </div>
                <!--  -->
            </div> 
        </div>
    </div>
    <%- include('../partials/footer') %>
    <%- include('../partials/scripts.ejs') %> 
</body>
</html>
<script src="js/pop-up-forms.js"></script>
